<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <!-- Scrollable Profile Content -->
    <ScrollView
        android:id="@+id/scrollProfileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerNav"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1E88E5"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#FFFFFF"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator Profile"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Profile Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/ivProfilePic"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_profile"
                            android:background="@drawable/circle_background"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="Profile Picture" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Operator"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:paddingBottom="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Contact Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:text="Contact Information"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp" />

                        <TextView
                            android:text="Email"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:paddingBottom="16dp" />

                        <TextView
                            android:text="Operator ID"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvUserId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:paddingBottom="0dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Station Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:text="Station Details"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp" />

                        <TextView
                            android:text="Station Name"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvStation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:paddingBottom="16dp" />

                        <TextView
                            android:text="Station Location"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvStationLoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:paddingBottom="16dp" />

                        <TextView
                            android:text="Status"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvActive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textSize="16sp"
                            android:textColor="#43A047"
                            android:textStyle="bold"
                            android:paddingBottom="0dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="#FFFFFF"
                    android:background="#1E88E5"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer -->
    <include
        android:id="@+id/footerNav"
        layout="@layout/layout_footer_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
