<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundLight">

    <!-- Scrollable main content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout"
        android:paddingBottom="80dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Profile Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="24dp">

                <!-- Profile Icon/Image -->
                <ImageView
                    android:id="@+id/ivProfileOwner"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp" />

                <!-- Welcome Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcomeOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, EV Owner!"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOwnerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner ID: OW001"
                        android:textSize="12sp"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnNotifications"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="Notifications" />

                    <TextView
                        android:id="@+id/tvNotificationCount"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/circle_red_bg"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Logout Button -->
                <ImageButton
                    android:id="@+id/btnLogoutOwner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_logout"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Logout" />
            </LinearLayout>

            <!-- Search and Filter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_search_card"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <!-- Search Bar with Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search_field"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:tint="@color/primary"
                        android:layout_marginEnd="6dp" />

                    <AutoCompleteTextView
                        android:id="@+id/searchStations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search stations..."
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1" />
                </LinearLayout>

                <!-- Station Type Selector -->
                <Spinner
                    android:id="@+id/spinnerStationType"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_spinner_styled"
                    android:padding="4dp" />
            </LinearLayout>
            <!-- Map Section -->
            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_button_card"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnReserveSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reserve Slot"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/primary_dark"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp"
                    android:paddingVertical="10dp" />

                <Button
                    android:id="@+id/btnMyBookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Bookings"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp"
                    android:paddingVertical="10dp" />

                <Button
                    android:id="@+id/btnChargingHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charging History"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/statusCharging"
                    android:elevation="2dp"
                    android:paddingVertical="10dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer -->
    <include
        android:id="@+id/footerLayout"
        layout="@layout/footer_owner"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
