<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ðŸ§¾ Enhanced Card Container -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivStatusIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_hourglass_empty" />

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Booking Details"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                        </LinearLayout>

                        <!-- Status Badge -->
                        <LinearLayout
                            android:id="@+id/statusContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/bg_status_badge"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <!-- Cancel Reason -->
                        <TextView
                            android:id="@+id/tvReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#D32F2F"
                            android:textStyle="italic"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:text="Reason: " />

                        <!-- Info Section with improved spacing -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:paddingTop="16dp"
                            android:background="@drawable/bg_section_divider">

                            <!-- Station Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingVertical="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_ev_station"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:id="@+id/tvStation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Station: â€”"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <!-- Slot Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingVertical="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_slot"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:id="@+id/tvSlot"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Slot: â€”"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <!-- Time Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingVertical="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_time"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:id="@+id/tvTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Time: â€”"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <!-- Booking ID -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingVertical="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_confirm_booking"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:id="@+id/tvBookingId"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Booking ID: â€”"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- QR Note -->
                        <TextView
                            android:id="@+id/tvQrNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Show this QR to the operator at the station."
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginTop="24dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/bg_note_background" />

                        <!-- QR Code Container -->
                        <LinearLayout
                            android:id="@+id/qrContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:padding="20dp"
                            android:background="@drawable/bg_qr_border"
                            android:elevation="6dp">

                            <ImageView
                                android:id="@+id/ivQr"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:contentDescription="QR Code"
                                android:scaleType="fitCenter" />

                        </LinearLayout>

                        <!-- Share Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShareQr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Share QR Code"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="24dp"
                            android:elevation="4dp"
                            android:backgroundTint="@color/primary"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            app:icon="@drawable/ic_share"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ðŸ”¹ Fixed Footer -->
    <include
        android:id="@+id/footerLayout"
        layout="@layout/footer_owner"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>